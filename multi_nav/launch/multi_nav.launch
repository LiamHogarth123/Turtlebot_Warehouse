<launch>
  <!-- Arguments -->
  <arg name="model" default="$(env TURTLEBOT3_MODEL)" doc="model type [burger, waffle, waffle_pi]"/>
  <arg name="map_file" default="$(find multi_nav)/maps/map.yaml"/>
  <arg name="open_rviz" default="true"/>
  <arg name="move_forward_only" default="false"/>
  <arg name="tb" default=""/>
  <arg name="x" default="0"/>
  <arg name="y" default="0"/>
  <arg name="yaw" default="0"/>

  <group ns="$(arg tb)">
    <!-- Map server -->
    <node pkg="map_server" name="map_server" type="map_server" args="$(arg map_file)">
      <param name="frame_id" value="$(arg tb)/map"/>
    </node>

    <node pkg="tf2_ros" type="static_transform_publisher" name="map_to_ns_map" args="0 0 0 0 0 0 map $(arg tb)/map" />

    <!-- Transform between map and robot's starting position -->
    <!-- <node pkg="tf2_ros" type="static_transform_publisher" name="map_to_odom" args="$(arg x) $(arg y) 0 $(arg yaw) 0 0 $(arg tb)/map $(arg tb)/odom" /> -->

    <!-- <node pkg="tf2_ros" type="static_transform_publisher" name="ns_scan_to_scan" args="0 0 0 0 0 0 $(arg tb)/base_scan base_scan" /> -->

    <!-- Turtlebot3 -->
    <include file="$(find turtlebot3_bringup)/launch/turtlebot3_remote.launch">
      <arg name="model" value="$(arg model)" />
      <arg name="multi_robot_name" value="$(arg tb)" />
    </include>

    <!-- Launch an AMCL node -->
    <node pkg="amcl" type="amcl" name="amcl">

      <param name="tf_prefix" value="$(arg tb)"/>
      <param name="global_frame_id"           value="map"/>

      <param name="min_particles"             value="500"/>
      <param name="max_particles"             value="3000"/>
      <param name="kld_err"                   value="0.02"/>
      <param name="update_min_d"              value="0.20"/>
      <param name="update_min_a"              value="0.20"/>
      <param name="resample_interval"         value="1"/>
      <param name="transform_tolerance"       value="0.5"/>
      <param name="recovery_alpha_slow"       value="0.00"/>
      <param name="recovery_alpha_fast"       value="0.00"/>
      <param name="initial_pose_x"            value="$(arg x)"/>
      <param name="initial_pose_y"            value="$(arg y)"/>
      <param name="initial_pose_a"            value="$(arg yaw)"/>
      <param name="gui_publish_rate"          value="50.0"/>

      <remap from="$(arg tb)/scan"            to="scan"/>
      <param name="laser_max_range"           value="3.5"/>
      <param name="laser_max_beams"           value="180"/>
      <param name="laser_z_hit"               value="0.5"/>
      <param name="laser_z_short"             value="0.05"/>
      <param name="laser_z_max"               value="0.05"/>
      <param name="laser_z_rand"              value="0.5"/>
      <param name="laser_sigma_hit"           value="0.2"/>
      <param name="laser_lambda_short"        value="0.1"/>
      <param name="laser_likelihood_max_dist" value="2.0"/>
      <param name="laser_model_type"          value="likelihood_field"/>

      <param name="odom_model_type"           value="diff"/>
      <param name="odom_alpha1"               value="0.1"/>
      <param name="odom_alpha2"               value="0.1"/>
      <param name="odom_alpha3"               value="0.1"/>
      <param name="odom_alpha4"               value="0.1"/>
      <param name="odom_frame_id"             value="$(arg tb)/odom"/>
      <param name="base_frame_id"             value="$(arg tb)/base_footprint"/>

      <!-- <remap from="map" to="/$(arg tb)/map"/> -->
      <param name="use_map_topic" value="true" />
    </node>

    <!-- Move Base -->
    <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
      <param name="base_local_planner" value="dwa_local_planner/DWAPlannerROS" />
      <rosparam file="$(find multi_nav)/param/costmap_common_params_$(arg tb).yaml" command="load" ns="global_costmap" />
      <rosparam file="$(find multi_nav)/param/costmap_common_params_$(arg tb).yaml" command="load" ns="local_costmap" />
      <rosparam file="$(find multi_nav)/param/local_costmap_params_$(arg tb).yaml" command="load" />
      <rosparam file="$(find multi_nav)/param/global_costmap_params_$(arg tb).yaml" command="load" />
      <rosparam file="$(find multi_nav)/param/move_base_params.yaml" command="load" />
      <rosparam file="$(find multi_nav)/param/dwa_local_planner_params_waffle_pi.yaml" command="load" />

      <param name="controller_frequency" value="10.0" />
      <param name="global_costmap/robot_base_frame" value="$(arg tb)/base_footprint"/>
      <param name="local_costmap/robot_base_frame" value="$(arg tb)/base_footprint"/>
      <param name="local_costmap/global_frame" value="$(arg tb)/odom"/>
      <param name="tf_prefix" value="$(arg tb)"/>
    </node>
    
    
  </group>

  <!-- Rviz -->
  <group if="$(arg open_rviz)"> 
    <node pkg="rviz" type="rviz" name="rviz_$(arg tb)" required="true" args="-d $(find multi_nav)/rviz/navigation_$(arg tb).rviz"/>
  </group>
  
</launch>
