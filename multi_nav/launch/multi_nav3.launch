<launch>
  <!-- Arguments -->
  <arg name="model" default="$(env TURTLEBOT3_MODEL)" doc="model type [burger, waffle, waffle_pi]"/>
  <arg name="map_file" default="$(find multi_nav)/maps/map.yaml"/>
  <arg name="open_rviz" default="true"/>
  <arg name="tb0" default="tb3_0"/>
  <arg name="tb1" default="tb3_1"/>
  <arg name="tb2" default="tb3_2"/>

  <group ns="$(arg tb0)">
    <!-- Map server -->
    <!-- <node pkg="map_server" name="map_server" type="map_server" args="$(arg map_file)">
      <param name="frame_id" value="$(arg tb0)/map"/>
    </node> -->

    <!-- <node pkg="tf2_ros" type="static_transform_publisher" name="map_to_ns_map" args="0 0 0 0 0 0 map $(arg tb0)/map" /> -->

    <!-- Transform between map and robot's starting position -->
    <!-- <node pkg="tf2_ros" type="static_transform_publisher" name="map_to_odom" args="$(arg x) $(arg y) 0 $(arg yaw) 0 0 $(arg tb0)/map $(arg tb0)/odom" /> -->

    <!-- <node pkg="tf2_ros" type="static_transform_publisher" name="ns_scan_to_scan" args="0 0 0 0 0 0 $(arg tb0)/base_scan base_scan" /> -->

    <!-- Launch Turtlebot3 -->
    <include file="$(find turtlebot3_bringup)/launch/turtlebot3_remote.launch">
      <arg name="model" value="$(arg model)" />
      <arg name="multi_robot_name" value="$(arg tb0)" />
    </include>

    <!-- Launch an AMCL node -->
    <node pkg="amcl" type="amcl" name="amcl">
      <rosparam file="$(find multi_nav)/param/amcl.yaml" command="load" />
      <param name="odom_frame_id"             value="$(arg tb0)/odom"/>
      <param name="base_frame_id"             value="$(arg tb0)/base_footprint"/>
      <remap from="map" to="/map"/>
    </node>
  </group>

  <group ns="$(arg tb1)">
    <!-- Map server -->
    <!-- <node pkg="map_server" name="map_server" type="map_server" args="$(arg map_file)">
      <param name="frame_id" value="$(arg tb1)/map"/>
    </node> -->

    <!-- <node pkg="tf2_ros" type="static_transform_publisher" name="map_to_ns_map" args="0 0 0 0 0 0 map $(arg tb1)/map" /> -->

    <!-- Transform between map and robot's starting position -->
    <!-- <node pkg="tf2_ros" type="static_transform_publisher" name="map_to_odom" args="$(arg x) $(arg y) 0 $(arg yaw) 0 0 $(arg tb1)/map $(arg tb1)/odom" /> -->

    <!-- <node pkg="tf2_ros" type="static_transform_publisher" name="ns_scan_to_scan" args="0 0 0 0 0 0 $(arg tb1)/base_scan base_scan" /> -->

    <!-- Launch Turtlebot3 -->
    <include file="$(find turtlebot3_bringup)/launch/turtlebot3_remote.launch">
      <arg name="model" value="$(arg model)" />
      <arg name="multi_robot_name" value="$(arg tb1)" />
    </include>

    <!-- Launch an AMCL node -->
    <node pkg="amcl" type="amcl" name="amcl">
      <rosparam file="$(find multi_nav)/param/amcl.yaml" command="load" />
      <param name="odom_frame_id"             value="$(arg tb1)/odom"/>
      <param name="base_frame_id"             value="$(arg tb1)/base_footprint"/>
      <remap from="map" to="/map"/>
    </node>
  </group>

  <group ns="$(arg tb2)">
    <!-- Map server -->
    <!-- <node pkg="map_server" name="map_server" type="map_server" args="$(arg map_file)">
      <param name="frame_id" value="$(arg tb2)/map"/>
    </node> -->

    <!-- <node pkg="tf2_ros" type="static_transform_publisher" name="map_to_ns_map" args="0 0 0 0 0 0 map $(arg tb2)/map" /> -->

    <!-- Transform between map and robot's starting position -->
    <!-- <node pkg="tf2_ros" type="static_transform_publisher" name="map_to_odom" args="$(arg x) $(arg y) 0 $(arg yaw) 0 0 $(arg tb2)/map $(arg tb2)/odom" /> -->

    <!-- <node pkg="tf2_ros" type="static_transform_publisher" name="ns_scan_to_scan" args="0 0 0 0 0 0 $(arg tb2)/base_scan base_scan" /> -->

    <!-- Launch Turtlebot3 -->
    <include file="$(find turtlebot3_bringup)/launch/turtlebot3_remote.launch">
      <arg name="model" value="$(arg model)" />
      <arg name="multi_robot_name" value="$(arg tb2)" />
    </include>

    <!-- Launch an AMCL node -->
    <node pkg="amcl" type="amcl" name="amcl">
      <rosparam file="$(find multi_nav)/param/amcl.yaml" command="load" />
      <param name="odom_frame_id"             value="$(arg tb2)/odom"/>
      <param name="base_frame_id"             value="$(arg tb2)/base_footprint"/>
      <remap from="map" to="/map"/>
    </node>
  </group>

  <!-- Launch a move_base node -->
  <include file="$(find multi_nav)/launch/includes/move_base3.launch">
    <arg name="tb0" value="$(arg tb0)" />
    <arg name="tb1" value="$(arg tb1)" />
    <arg name="tb2" value="$(arg tb2)" />
  </include>

  <!-- Launch rviz -->
  <group if="$(arg open_rviz)"> 
    <node pkg="rviz" type="rviz" name="rviz" required="true" args="-d $(find multi_nav)/rviz/turtlebot3_navigation_multi.rviz"/>
  </group>

</launch>